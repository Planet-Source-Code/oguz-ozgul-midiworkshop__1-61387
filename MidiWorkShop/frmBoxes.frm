Option Explicit
Private arrPos(127) As Long
Private lngNoteColor  As Long

Private Sub Form_Load()
    Dim lngIdx As Long
    For lngIdx = 0 To 15
        With picBoxes(lngIdx)
            .Picture = LoadPicture(App.Path & "\Graphics\boxes.bmp")
            .Height = 7
            .Top = lngIdx * 8
            .ScaleMode = vbPixels
        End With
    Next lngIdx
    Me.Height = 152 * Screen.TwipsPerPixelY
    For lngIdx = 0 To 127
        arrPos(lngIdx) = 1 + (lngIdx * 6)
    Next lngIdx
    lngNoteColor = RGB(40, 192, 40)
End Sub


Function drawNoteOnOff(ByVal lngChannel As Long, ByVal lngNote As Long, ByVal blnNoteOn As Boolean)
    If blnNoteOn Then
        picBoxes(lngChannel).Line (arrPos(lngNote), 0)-(arrPos(lngNote) + 4, 6), lngNoteColor, BF
    Else
        picBoxes(lngChannel).Line (arrPos(lngNote), 0)-(arrPos(lngNote) + 4, 6), 0, BF
    End If
End Function

Function AllNotesOff(ByVal lngChannel As Long)
    picBoxes(lngChannel).Cls
End Function
